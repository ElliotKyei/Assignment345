


    <div  class="container-fluid" >
<h6>Create Account</h6>
      <form action="/signup-user" method="POST">
      
        <div class="FirstNameBox">
          <label for="first-name" class="first-name boxLabel">First Name</label>
          <input
            type="text"
            id="first-name"
            name = "firstname"
            value="{{data.formData.firstname}}" 
            class="first-name boxInput"
          >
           {{#if data.errors.firstname}}
                        <div class="errorMsg"> 
                          {{data.errors.firstname}}
                        </div>
                      {{/if}}
        </div>

        <div class="LastNameBox" style="margin-top: -5px">
          <label for="last-name" class="last-name boxLabel">Last Name</label>
          <input
            type="text"
            id="last-name"
            name = "lastname"
            value="{{data.formData.lastname}}" 
            class="last-name boxInput"
            >
                   {{#if data.errors.lastname}}
                        <div class="errorMsg"> 
                            {{data.errors.lastname}}
                        </div>
                      {{/if}}
        </div>
        <div class="EmailBox" style="margin-top: -5px">
          <label for="email" class="e-mail boxLabel" style="margin-right: 165px"
            >Email Address</label
          >
          <input
            type="text"
            name = "email"
            value="{{data.formData.email}}" 
            id="email"
            class="e-mail boxInput"
          >
                     {{#if data.errors.email}}
                        <div class="errorMsg"=> 
                          {{data.errors.email}}
                        </div>
                      {{/if}}
        </div>
        <div class="PasswordBox" style="margin-top: -5px">
          <label for="password" class="password boxLabel"  style="margin-right: 210px">Password</label>
          <input
            type="password"
            name = "password"
            value="{{data.formData.password}}" 
            id="password"
            class="password boxInput"
          >

                     {{#if data.errors.password}}
                        <div class="errorMsg"> 
                            {{data.errors.password}}
                        </div>
                      {{/if}}

        </div>
        <div class="PasswordBox" style="margin-top: -5px">
          <label for="password2" class="password boxLabel"  style="margin-right: 125px">Confirm Password</label>
          <input
            type="password"
            name = "password2"
            value="{{data.formData.password2}}" 
            id="password"
            class="password boxInput"
          >

                     {{#if data.errors.password2}}
                        <div class="errorMsg" > 
                          {{data.errors.password2}}
                        </div>
                      {{/if}}

        </div>
        <div class="SignUpBox">
          <button style="margin-left: 25px;" type="submit" class="signUp-btn">Sign Up</button>
        </div>
      </form>
    </div>
    <hr>
    <div class="hero">
      <img src="/static/SignUpPic.jpg" class="small-heroPic" alt="logo" />
    </div>
